@model AppLabs.UI.Models.WordCounterModel

@{
    ViewBag.Title = "WordCounterInput";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Word Counter</h2>

<div class="row">
    <div class="col-sm-12">
        <p>Enter a sentence and see how many words are in your sentence</p>
    </div>
</div>
<div class="row">
    <div class="col-sm-4 col-sm-offset-1">
        @using (Html.BeginForm("WordCounterInput", "Moderate", FormMethod.Post, new { role = "form" }))
        {
            @Html.ValidationSummary()
            <div class="form-group">
                @Html.TextBoxFor(m => m.UserInput, new { @class = "form-control", placeholder = "Enter a sentence" })
            </div>
          
            <button type="submit" class="btn btn-default btn-lg btn-block">Find</button>
        }
    </div>
</div>