@model AppLabs.UI.Models.LeapYearCalculatorModel

@{
    ViewBag.Title = "LeapYearInput";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Leap Year Calculator</h2>

<div class="row">
    <div class="col-sm-12">
        <p>To find the number of leap years between two years:</p>
    </div>
</div>
<div class="row">
    <div class="col-sm-4 col-sm-offset-1">
        @using (Html.BeginForm("LeapYearInput", "Simple", FormMethod.Post, new { role = "form" }))
        {
            @Html.ValidationSummary()
            <div class="form-group">
                @Html.TextBoxFor(m => m.StartYear, new { @class = "form-control", placeholder = "Enter 4-digit Start Year" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.EndYear, new { @class = "form-control", placeholder = "Enter 4-digit End Year" })
            </div>
            
            <button type="submit" class="btn btn-default btn-lg btn-block">Calculate</button>
        }
    </div>
</div>
