@model AppLabs.UI.Models.PalidromeFinderModel

@{
    ViewBag.Title = "PalindromeInput";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Is your word a Palindrome?</h2>

<div class="row">
    <div class="col-sm-12">
        <p>To find out if your word is a palindrome, enter your word here:</p>
    </div>
</div>
<div class="row">
    <div class="col-sm-4 col-sm-offset-1">
        @using (Html.BeginForm("PalindromeInput", "Simple", FormMethod.Post, new { role = "form" }))
        {
            @Html.ValidationSummary()
            <div class="form-group">
                @Html.TextBoxFor(m => m.Word, new { @class = "form-control", placeholder = "Enter a word" })
            </div>
            <button type="submit" class="btn btn-default btn-lg btn-block">Verify</button>
        }
    </div>
</div>