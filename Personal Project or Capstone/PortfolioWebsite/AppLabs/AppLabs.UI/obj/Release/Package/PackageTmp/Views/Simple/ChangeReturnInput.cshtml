@model AppLabs.UI.Models.ChangeReturnModel

@{
    ViewBag.Title = "ChangeReturnInput";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Calculate Change in Coins</h2>

<div class="row">
    <div class="col-sm-12">
        <p>Enter the item cost and your payment to calculate what your change would be in coins:</p>
    </div>
</div>
<div class="row">
    <div class="col-sm-4 col-sm-offset-1">
        @using (Html.BeginForm("ChangeReturnInput", "Simple", FormMethod.Post, new { role = "form" }))
        {
            @Html.ValidationSummary()
            <div class="form-group">
                @Html.TextBoxFor(m => m.ItemCost, new { @class = "form-control", placeholder = "Enter the item cost" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.UserCash, new { @class = "form-control", placeholder = "Enter your payment" })
            </div>

            <button type="submit" class="btn btn-default btn-lg btn-block">Calculate</button>
        }
    </div>
</div>