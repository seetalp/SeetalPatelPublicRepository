@model AppLabs.UI.Models.FloorCalculatorModel

@{
    ViewBag.Title = "FloorCalculatorInput";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Floor Calculator</h2>
<div class="row">
    <div class="col-sm-12">
        <p>To estimate your floor costs, please enter the following:</p>
    </div>
</div>
<div class="row">
    <div class="col-sm-4 col-sm-offset-1">
        @using (Html.BeginForm("FloorCalculatorInput", "Simple", FormMethod.Post, new { role = "form" }))
        {
            @Html.ValidationSummary()
            <div class="form-group">
                @Html.TextBoxFor(m => m.Length, new { @class = "form-control", placeholder = "Enter floor length" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.Width, new { @class = "form-control", placeholder = "Enter floor width" })
            </div>
             <div class="form-group">
                @Html.TextBoxFor(m => m.UnitCost, new { @class = "form-control", placeholder = "Enter the unit cost" })
            </div>
            <button type="submit" class="btn btn-default btn-lg btn-block">Calculate</button>
        }
    </div>
</div>
