@model AppLabs.UI.Models.MorseCodeModel

@{
    ViewBag.Title = "MorseCodeInput";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Translate Words into Morse Code</h2>

<div class="row">
    <div class="col-sm-12">
        <p>Enter a word to translate into Morse Code:</p>
    </div>
</div>
<div class="row">
    <div class="col-sm-4 col-sm-offset-1">
        @using (Html.BeginForm("MorseCodeInput", "Moderate", FormMethod.Post, new { role = "form" }))
        {
            @Html.ValidationSummary()
            <div class="form-group">
                @Html.TextBoxFor(m => m.UserInput, new { @class = "form-control", placeholder = "Enter a word" })
            </div>

            <button type="submit" class="btn btn-default btn-lg btn-block">Convert</button>
        }
    </div>
</div>