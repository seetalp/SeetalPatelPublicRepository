@model AppLabs.UI.Models.RomanNumeralModel

@{
    ViewBag.Title = "RomanNumeralInput";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Convert to Roman Numeral</h2>


<div class="row">
    <div class="col-sm-12">
        <p>Enter a number to convert it into Roman Numerals:</p>
    </div>
</div>
<div class="row">
    <div class="col-sm-4 col-sm-offset-1">
        @using (Html.BeginForm("RomanNumeralInput", "Moderate", FormMethod.Post, new { role = "form" }))
        {
            @Html.ValidationSummary()
            <div class="form-group">
                @Html.TextBoxFor(m => m.UserNumber, new { @class = "form-control", placeholder = "Enter a number" })
            </div>

            <button type="submit" class="btn btn-default btn-lg btn-block">Convert</button>
        }
    </div>
</div>