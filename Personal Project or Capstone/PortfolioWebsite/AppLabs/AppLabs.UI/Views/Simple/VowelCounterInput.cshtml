@model AppLabs.UI.Models.VowelCounterModel

@{
    ViewBag.Title = "VowelCounterInput";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Vowel Counter</h2>

<div class="row">
    <div class="col-sm-12">
        <p>Enter a word to see how many vowels are contained in that word:</p>
    </div>
</div>
<div class="row">
    <div class="col-sm-4 col-sm-offset-1">
        @using (Html.BeginForm("VowelCounterInput", "Simple", FormMethod.Post, new { role = "form" }))
        {
            @Html.ValidationSummary()
            <div class="form-group">
                @Html.TextBoxFor(m => m.Word, new { @class = "form-control", placeholder = "Enter a word" })
            </div>

            <button type="submit" class="btn btn-default btn-lg btn-block">Find</button>
        }
    </div>
</div>