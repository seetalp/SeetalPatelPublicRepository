@model AppLabs.UI.Models.TipCalculatorModel

@{
    ViewBag.Title = "TipCalculatorInput";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tip Calculator</h2>

<div class="row">
    <div class="col-sm-12">
        <p>To find out the tip amount for your meal, please enter the following:</p>
    </div>
</div>
<div class="row">
    <div class="col-sm-4 col-sm-offset-1">
        @using (Html.BeginForm("TipCalculatorInput", "Simple", FormMethod.Post, new { role = "form" }))
        {
            @Html.ValidationSummary()
            <div class="form-group">
                @Html.TextBoxFor(m => m.MealTotal, new { @class = "form-control", placeholder = "Enter meal amount" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.TipPercent, new { @class = "form-control", placeholder = "Enter tip %" })
            </div>
            
            <button type="submit" class="btn btn-default btn-lg btn-block">Calculate</button>
        }
    </div>
</div>